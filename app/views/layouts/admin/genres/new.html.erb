<h1>ジャンル一覧・追加</h1>

<%= form_with model: [:admin, @genre] do |f| %>

  <div class="form-group row">
    <%= f.label :ジャンル名, class: "col-md-2 col-form-label"%><br/>
    <div class="col-md-10">
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<table class = "table col-md-4">
    <thead class = "table-secondary">
        <tr>
            <th>ジャンル</th><th colspan="1"></th>
        </tr>
    </thead>
    
    <tbody>
        <% [:admin, @genres].each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
    
    <tr>
        <td>
          
         <!--編集ボタン-->
        </td>
    </tr>
    </tbody>
</table>