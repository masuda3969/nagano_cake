<h6>商品編集</h6>

<%= form_with model: [:admin, @item] do |f| %>

<p>商品画像</p>
<%= f.file_field :image, accept: "image/*" %>

<p>商品名</p>
<%= f.text_field :name %> 

<p>商品説明</p>
<%= f.text_area :introduction %>

<%= f.label :genre_id %>
<%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "カテゴリを選択してください" %>

<p>税抜価格</p>
<%= f.text_field :price %>円

<p>販売ステータス</p>
<%= f.radio_button :is_active, true %>
<%= f.label :is_active_true, "販売中" %>


<%= f.radio_button :is_active, false %>
<%= f.label :is_active_false, "販売停止中" %>

<%= f.submit '変更を保存' %>

<% end %>
