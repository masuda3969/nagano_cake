<div class ="container">
  <div class = "row">
      <h1>ジャンル編集</h1>
  </div>
  
  <%= form_with model: [:admin, @genre] do |f| %>
  <div class = "form-group row">
     
         <%= f.label :ジャンル名, class: "col-md-2 col-form-label" %>
         
         <div class = "col-md-10">
         <%= f.text_field :name %>
         <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
  </div>
  <% end %>
</div>
